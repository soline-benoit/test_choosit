{% extends "layout.html.twig" %}

{% block title %}{{ product.name }} / Détails du produit / Test Choosit{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('index') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('product_list') }}">Liste des produits</a></li>
            <li class="breadcrumb-item active">{{ product.name }}</li>
        </ol>
    </nav>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-5">
            <img src="{{ vich_uploader_asset(product, 'imageFile') }}"
                 alt="image du produit {{ product.name }}" class="img-thumbnail"/>
        </div>
        <div class="col-sm-7">
            <h1>{{ product.name }}
                <span class="badge badge-secondary font-weight-light">{{ product.price }}€</span>
            </h1>
            <p>{{ product.description }}</p>

            <form action="{{ cartSession.quantityByProduct(product) > 0 ?
                                path('edit_quantity_action', {slug: product.slug}) :
                                path('add_to_cart_action', {slug: product.slug}) }}"
                  method="post" class="input-group">
                <input type="number" name="quantity"
                       min="0" class="form-control"
                       value="{{ cartSession.quantityByProduct(product) > 0 ?
                       cartSession.quantityByProduct(product) }}"
                       placeholder="Quantité">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        {% if cartSession.quantityByProduct(product) > 0 %}
                            Modifier la quantité
                            <i class="fas fa-edit"></i>
                        {% else %}
                            Ajouter au panier
                            <i class="fas fa-cart-plus"></i>
                        {% endif %}
                    </button>
                    {% if cartSession.quantityByProduct(product) > 0 %}
                        <a href="{{ path('remove_from_cart_action', {slug: product.slug}) }}"
                           class="btn btn-secondary" type="submit">
                            Retirer du panier
                            <i class="fas fa-times"></i>
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}